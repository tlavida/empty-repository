<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet author="Lavida" id="employee-01">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="employee"/>
            </not>
        </preConditions>
        <createTable remarks="Сотрудники" tableName="employee">
            <column name="id" type="SERIAL" remarks="Идентификатор сотрудника">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="fio" type="VARCHAR(256)" remarks="ФИО сотрудника">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="INTEGER" remarks="Ссылка на роль сотрудника">
                <constraints nullable="false" foreignKeyName="fk_role_model_id" references="role_model(id)"/>
            </column>
            <column name="login" type="VARCHAR(50)" remarks="Логин сотрудника" />
            <column name="password" type="VARCHAR(256)" remarks="Пароль сотрудника" />
        </createTable>
    </changeSet>

